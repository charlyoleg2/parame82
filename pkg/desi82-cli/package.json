{
	"name": "desi82-cli",
	"description": "The cli-frontend for desi82",
	"version": "1.0.0",
	"private": false,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/charlyoleg2/parame82.git"
	},
	"homepage": "https://charlyoleg2.github.io/parame82/",
	"author": "charlyoleg2",
	"license": "ISC",
	"keywords": [
		"parametrix",
		"3D",
		"CAD"
	],
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/desi82-cli.d.ts",
			"default": "./dist/desi82-cli.js"
		}
	},
	"bin": {
		"desi82-cli": "dist/desi82-cli.js"
	},
	"files": [
		"dist/",
		"!dist/**/*.d.ts",
		"!dist/**/*.map",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"tsup": {
		"entry": [
			"src/desi82-cli.ts"
		],
		"format": "esm",
		"splitting": false,
		"dts": false,
		"sourcemap": false,
		"clean": true
	},
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup",
		"check": "tsc --noEmit",
		"pretty": "prettier --check .",
		"format": "prettier --write .",
		"lint": "eslint .",
		"test:unit": "vitest",
		"test:unit:once": "vitest --run",
		"test:bats": "bats test/test1.bats",
		"ci": "run-s check build pretty lint test:unit:once test:bats",
		"run": "dist/desi82-cli.js",
		"clean": "rimraf build dist node_modules"
	},
	"dependencies": {
		"desi82": "^1.0.0",
		"geomcli": "^1.0.21",
		"geometrix": "^1.0.21"
	},
	"devDependencies": {
		"@eslint/js": "^9.10.0",
		"@types/eslint__js": "^8.42.3",
		"bats": "^1.12.0",
		"eslint": "^9.29.0",
		"eslint-config-prettier": "^10.1.5",
		"npm-run-all2": "^8.0.4",
		"prettier": "^3.5.3",
		"rimraf": "^6.0.1",
		"tsup": "^8.5.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.34.1",
		"vitest": "^3.2.4"
	}
}
