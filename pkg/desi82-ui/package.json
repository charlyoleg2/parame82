{
	"name": "desi82-ui",
	"description": "sveltekit-ui for desi82",
	"version": "1.0.1",
	"private": true,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/charlyoleg2/parame82.git"
	},
	"homepage": "https://charlyoleg2.github.io/parame82/",
	"author": "charlyoleg2",
	"license": "ISC",
	"keywords": [
		"parametrix",
		"3D",
		"CAD"
	],
	"type": "module",
	"scripts": {
		"cp_pgdsvg": "fse copy ../../node_modules/desi82/dist/pgdsvg static/pgdsvg",
		"prebuild": "svelte-kit sync",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"test:unit:once": "vitest --run",
		"lint": "prettier --check . && eslint .",
		"ci": "run-s cp_pgdsvg build lint check test:unit:once",
		"format": "prettier --write .",
		"github-pages-fix": "touch build/.nojekyll",
		"clean": "rimraf .svelte-kit build node_modules static/pgdsvg"
	},
	"dependencies": {
		"desi82": "^1.0.0",
		"geometrix": "^1.0.22",
		"geomui": "^1.0.22"
	},
	"devDependencies": {
		"@atao60/fse-cli": "^0.1.9",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.22.2",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"@types/eslint": "^9.6.1",
		"eslint": "^9.30.1",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.10.1",
		"globals": "^16.3.0",
		"npm-run-all2": "^8.0.4",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"rimraf": "^6.0.1",
		"sass": "^1.89.2",
		"svelte": "^5.35.1",
		"svelte-check": "^4.2.2",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.35.1",
		"vite": "^6.3.5",
		"vitest": "^3.2.4"
	}
}
