{
	"name": "desi82-ui",
	"description": "sveltekit-ui for desi82",
	"version": "0.1.1",
	"private": true,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/charlyoleg2/parame82.git"
	},
	"homepage": "https://charlyoleg2.github.io/parame82/",
	"author": "charlyoleg2",
	"license": "ISC",
	"keywords": [
		"parametrix",
		"3D",
		"CAD"
	],
	"type": "module",
	"scripts": {
		"cp_pgdsvg": "shx cp -r ../../node_modules/desi82/dist/pgdsvg static/",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"test:unit:once": "vitest --run",
		"lint": "prettier --check . && eslint .",
		"ci": "run-s cp_pgdsvg build lint check test:unit:once",
		"format": "prettier --write .",
		"github-pages-fix": "touch build/.nojekyll",
		"clean": "shx rm -fr .svelte-kit build node_modules static/pgdsvg"
	},
	"dependencies": {
		"desi82": "^0.5.12",
		"geometrix": "^0.5.49",
		"geomui": "^0.5.51"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.2.4",
		"@sveltejs/adapter-static": "^3.0.4",
		"@sveltejs/kit": "^2.5.27",
		"@sveltejs/vite-plugin-svelte": "^3.1.2",
		"@types/eslint": "^9.6.1",
		"eslint": "^9.10.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.44.0",
		"globals": "^15.9.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.6",
		"sass": "^1.78.0",
		"shx": "^0.3.4",
		"svelte": "^4.2.19",
		"svelte-check": "^4.0.2",
		"typescript": "^5.6.2",
		"typescript-eslint": "^8.5.0",
		"vite": "^5.4.5",
		"vitest": "^2.1.1"
	}
}
