{
	"name": "desi82",
	"version": "0.5.2",
	"description": "A collection od designs to be 3D-printed",
	"private": false,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/charlyoleg2/parame82.git"
	},
	"homepage": "https://charlyoleg2.github.io/parame82/",
	"keywords": [
		"cad",
		"programmatic",
		"2D",
		"circle",
		"stroke",
		"arc",
		"gear"
	],
	"author": "charlyoleg",
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"format": "esm",
		"splitting": false,
		"dts": true,
		"sourcemap": true,
		"clean": true
	},
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup",
		"check": "tsc --noEmit",
		"pretty": "prettier --check .",
		"format": "prettier --write .",
		"lint": "eslint .",
		"test:unit": "vitest",
		"test:unit:once": "vitest --run",
		"ci": "run-s check build pretty lint test:unit:once svgo",
		"svgo1": "svgo --config ./svgo.config.js -f src/printer3d/svg -o dist/pgdsvg/",
		"svgo": "run-s svgo1",
		"browserBundleA": "esbuild src/printer3d/doorstop.ts --bundle --format=esm --outfile=dist2/doorstop.js",
		"browserBundleAll": "esbuild dist/index.js --bundle --format=esm --outfile=dist2/desi82.js",
		"clean": "shx rm -fr dist dist2 node_modules"
	},
	"dependencies": {
		"geometrix": "^0.5.27"
	},
	"devDependencies": {
		"@types/node": "^20.11.30",
		"@typescript-eslint/eslint-plugin": "^7.4.0",
		"@typescript-eslint/parser": "^7.4.0",
		"esbuild": "^0.20.2",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.2.5",
		"shx": "^0.3.4",
		"svgo": "^3.2.0",
		"tsup": "^8.0.2",
		"typescript": "^5.4.3",
		"vitest": "^1.4.0"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.map",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"types": "./dist/index.d.ts",
	"type": "module"
}
